<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="vladimir.glinskiy99@gmail.com" id="2024-04-07T14-35-move-unit-from-sensor-value-to-sensor">
        <addColumn tableName="sensor">
            <column name="unit" type="ENUM('CELSIUS', 'FAHRENHEIT')"
                    valueComputed="IFNULL((SELECT IFNULL(sv.unit, 'CELSIUS') FROM sensor_value sv WHERE sv.sensor_id = sensor.id), 'CELSIUS')">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <dropColumn tableName="sensor_value" columnName="unit"/>
    </changeSet>
</databaseChangeLog>
